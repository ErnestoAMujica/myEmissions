<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/background_login">

    <ImageView
        android:background="@drawable/appicontransparent"
        android:id="@+id/appicon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        />

    <TextView
        android:id="@+id/profile_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:shadowColor="@color/dark_blue"
        android:shadowRadius="3"
        android:shadowDx="2"
        android:shadowDy="2"
        android:fontFamily="serif"
        android:textColor="@color/dark_gray"
        android:textSize="60sp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="130dp"
        android:textStyle="bold"
        android:gravity="left"
        />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/lighter_gray"
        app:cardCornerRadius="20dp"
        android:id="@+id/profile_DisplayCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="325dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="55dp"
        app:cardElevation="0dp"
        />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#9FA8DA"
        app:cardCornerRadius="20dp"
        android:id="@+id/emissions_DisplayCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="60dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="55dp"
        app:cardElevation="0dp"
        />

    <TextView
        android:id="@+id/name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Name"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="20dp"
        android:fontFamily="serif"
        android:textColor="@color/dark_gray"
        android:textSize="25sp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/username_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:drawableLeft="@drawable/ic_baseline_contact_page_24"
        android:drawablePadding="20dp"
        android:fontFamily="serif"
        android:textColor="@color/dark_gray"
        android:textSize="25sp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/password_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password123"
        android:drawableLeft="@drawable/ic_baseline_password_24"
        android:drawablePadding="20dp"
        android:fontFamily="serif"
        android:textColor="@color/dark_gray"
        android:textSize="25sp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:gravity="left"
        />

    <TextView
        android:id="@+id/emissions_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's CO2 Emissions:"
        android:fontFamily="serif"
        android:textColor="@color/dark_gray"
        android:textSize="25sp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="60dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/emissions_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="999 kg"
        android:fontFamily="serif"
        android:textColor="@color/blue_gray"
        android:textSize="65sp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/vibrant_dark_blue"
        app:cardCornerRadius="15dp"
        android:id="@+id/mainPage_ButtonsDisplayCard"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-30sp"
        app:cardElevation="0dp"/>

    <ImageView
        android:background="@drawable/houseicon"
        android:backgroundTint="@color/lighter_gray"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="50sp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:id="@+id/homeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/lighter_gray"
        android:textSize="12sp"
        android:gravity="end"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="49sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/home_button"
        style="?android:attr/borderlessButtonStyle"
        android:backgroundTint="@color/transparent"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="40sp"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:background="@drawable/trendicon"
        android:backgroundTint="@color/lighter_gray"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="135sp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/trendText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trends"
        android:textColor="@color/lighter_gray"
        android:textSize="12sp"
        android:gravity="end"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="130sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/trend_button"
        style="?android:attr/borderlessButtonStyle"
        android:backgroundTint="@color/transparent"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="125sp"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />

    <ImageView
        android:background="@drawable/profileicon"
        android:backgroundTint="@color/lighter_gray"
        android:layout_marginBottom="30sp"
        android:layout_marginRight="135sp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/profileText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/lighter_gray"
        android:textSize="12sp"
        android:gravity="end"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="133sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/profile_button"
        style="?android:attr/borderlessButtonStyle"
        android:backgroundTint="@color/transparent"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="125sp"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:background="@drawable/settingsicon"
        android:backgroundTint="@color/lighter_gray"
        android:layout_marginBottom="30sp"
        android:layout_marginRight="50sp"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/settingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/lighter_gray"
        android:textSize="12sp"
        android:gravity="end"
        android:fontFamily="sans-serif"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="42sp"
        android:layout_marginBottom="10sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/settings_button"
        style="?android:attr/borderlessButtonStyle"
        android:backgroundTint="@color/transparent"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="40sp"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


    <ImageView
        android:background="@drawable/downarrowicon"
        android:backgroundTint="@color/lighter_gray"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="225dp"
        android:layout_marginRight="30dp"
        />





</RelativeLayout>