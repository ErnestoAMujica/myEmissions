<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/background_main"
    >

    <TextView
        android:id="@+id/register_registerText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor=" #202020 "
        android:textSize="55dp"
        android:layout_margin="50dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="190dp"
        android:layout_marginRight="220dp"

        android:src="@drawable/myemissions_logo" />

    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_registerText"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        android:hint="Username"
        android:padding="25dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="10dp"/>

    <EditText
        android:id="@+id/register_password"
        android:layout_below="@id/register_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="15dp"
        android:padding="25dp"
        android:background="@color/black"
        android:drawableLeft="@drawable/ic_baseline_password_24"
        android:drawablePadding="10dp"
        />

    <EditText
        android:id="@+id/password_retype"
        android:layout_below="@id/register_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reenter Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:layout_margin="15dp"
        android:padding="25dp"
        android:background="@color/black"
        android:drawableLeft="@drawable/ic_baseline_password_24"
        android:drawablePadding="10dp"
        />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_below="@id/password_retype"
        android:layout_marginStart="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="24dp"
        android:hint="Register"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:onClick="transferLogin"
        />

    <Button
        android:id="@+id/register_button_GoToLogin"
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:layout_below="@id/register_button"
        android:layout_marginStart="120dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="30dp"
        android:hint="Go to login page"
        android:onClick="transferLogin"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


</RelativeLayout>