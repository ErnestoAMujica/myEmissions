<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key = "delete_account"
        android:title = "@string/delete_account"
        android:summary = "@string/delete_account_summary"
        android:entries = "@array/delete_account_entries"
        android:entryValues = "@array/delete_account_values"
        android:defaultValue = "no" />
    <ListPreference
        android:key = "delete_data"
        android:title = "@string/delete_data"
        android:summary = "@string/delete_data_summary"
        android:entries = "@array/delete_data_entries"
        android:entryValues = "@array/delete_data_values"
        android:defaultValue = "no" />
    <ListPreference
        android:key = "change_password"
        android:title = "@string/change_password"
        android:summary = "@string/change_password_summary"
        android:entries = "@array/change_password_entries"
        android:entryValues = "@array/change_password_values"
        android:defaultValue = "no" />


</PreferenceScreen>