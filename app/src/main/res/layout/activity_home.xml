<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_main">

    <TextView
        android:id="@+id/mainPage_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hi, InsertName!"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="20dp"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/mainPage_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:text="MM/DD/YYYY"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="9dp" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/pinkish"
        app:cardCornerRadius="20dp"
        android:id="@+id/mainPage_emissionsDisplayCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="500dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="55dp"
        app:cardElevation="0dp"/>

    <TextView
        android:id="@+id/mainPage_emissionsDisplayText1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Average emissions today"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="600dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="9dp" />

    <TextView
        android:id="@+id/mainPage_emissionsDisplayText2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="kg of CO2"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="400dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="9dp" />

    <TextView
        android:id="@+id/mainPage_emissionsDisplayNumber"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0.00"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textStyle="normal"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="500dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="9dp" />

    <Button
        android:id="@+id/mainPage_emissionsAddButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="240dp"
        android:layout_marginBottom="400dp"
        android:layout_below="@id/mainPage_emissionsDisplayText2"
        android:background="?android:attr/selectableItemBackground"
        />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/pinkish"
        app:cardCornerRadius="20dp"
        android:id="@+id/mainPage_emissionsAddCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="420dp"
        app:cardElevation="0dp"/>

    <TextView
        android:id="@+id/mainPage_emissionsAddText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Add emitting action"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="normal"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="240dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="9dp" />

    <ImageView
        android:background="@drawable/addicon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="280dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="430dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>